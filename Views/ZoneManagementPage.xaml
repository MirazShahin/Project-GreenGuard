<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.ZoneManagementPage"
             BackgroundColor="#1E1E1E"
             Title="Zone Management">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Zone Management"
                   FontSize="28"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <SearchBar x:Name="ZoneSearchBar"
                       Placeholder="Search zone..."
                       TextChanged="OnSearchTextChanged"
                       TextColor="White"
                       BackgroundColor="#2A2A2A"/>

            <Picker x:Name="ZoneTypeFilterPicker"
                    Title="Filter by type"
                    SelectedIndexChanged="OnFilterChanged"
                    BackgroundColor="#333"
                    TextColor="White">
                <Picker.Items>
                    <x:String>All</x:String>
                    <x:String>Govt</x:String>
                    <x:String>Owner</x:String>
                    <x:String>Public</x:String>
                </Picker.Items>
            </Picker>

            <CollectionView x:Name="ZoneCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#2A2A2A"
                               CornerRadius="12"
                               Padding="15"
                               Margin="0,5">

                            <VerticalStackLayout>

                                <Label Text="{Binding ZoneName}"
                                       FontSize="20"
                                       TextColor="White"
                                       FontAttributes="Bold"/>

                                <Label Text="{Binding ZoneType}"
                                       FontSize="14"
                                       TextColor="LightBlue"/>

                                <!-- Fixed: No converter needed -->
                                <Label Text="{Binding Owner, StringFormat='Owner: {0}'}"
                                       FontSize="13"
                                       TextColor="#bbb"
                                       IsVisible="{Binding ShowOwner}"/>

                                <Label Text="{Binding PermissionStatus, StringFormat='Status: {0}'}"
                                       FontSize="13"
                                       TextColor="Orange"/>

                                <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">

                                    <Button Text="Edit"
                                            BackgroundColor="DodgerBlue"
                                            TextColor="White"
                                            CornerRadius="20"
                                            CommandParameter="{Binding .}"
                                            Clicked="OnEditZoneClicked"/>

                                    <Button Text="Delete"
                                            BackgroundColor="Red"
                                            TextColor="White"
                                            CornerRadius="20"
                                            CommandParameter="{Binding .}"
                                            Clicked="OnDeleteZoneClicked"/>

                                </HorizontalStackLayout>

                            </VerticalStackLayout>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Add Zone"
                    BackgroundColor="Purple"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="25"
                    Clicked="OnAddZoneClicked"/>

            <Button Text="Back"
                    BackgroundColor="Gray"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="25"
                    Clicked="OnBackClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
