<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GreenGuard.Views.BuyTreePage"
    BackgroundColor="#1E1E1E"
    Title="Buy Tree">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="🛒 Order Summary"
                   FontSize="26"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Label x:Name="TreeNameLabel"
                   FontSize="20"
                   TextColor="White"
                   FontAttributes="Bold"/>

            <Label x:Name="TreeDescriptionLabel"
                   FontSize="14"
                   TextColor="LightGray"
                   LineBreakMode="WordWrap"/>

            <Label x:Name="TreePriceLabel"
                   FontSize="16"
                   TextColor="#FFEEAA"/>

            <Label x:Name="TreeQuantityLabel"
                   FontSize="16"
                   TextColor="White"/>

            <Label x:Name="TotalPriceLabel"
                   FontSize="20"
                   TextColor="#FF3366"
                   FontAttributes="Bold"/>

            <!-- Confirm Button -->
            <Button Text="✔ Confirm Purchase"
                    BackgroundColor="#28A745"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="55"
                    Clicked="OnConfirmClicked"/>

            <!-- Back Button -->
            <Button Text="Back"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="55"
                    Clicked="OnBackClicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
