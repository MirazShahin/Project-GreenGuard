<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.AdminDashboard"
             BackgroundColor="#1E1E1E"
             Title="Admin Dashboard">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Admin Dashboard"
                   FontSize="28"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <HorizontalStackLayout Spacing="15"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Start">

                <Frame BackgroundColor="#2A2A2A"
                       CornerRadius="15"
                       Padding="20"
                       WidthRequest="150">
                    <VerticalStackLayout Spacing="5"
                                         HorizontalOptions="Center">
                        <Label Text="🌳" FontSize="40" />
                        <Label x:Name="TotalSoldLabel"
                               Text="0"
                               FontSize="26"
                               TextColor="LightGreen"
                               FontAttributes="Bold" />
                        <Label Text="Trees Sold"
                               FontSize="14"
                               TextColor="White" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Top Tree -->
                <Frame BackgroundColor="#2A2A2A"
                       CornerRadius="15"
                       Padding="20"
                       WidthRequest="150">
                    <VerticalStackLayout Spacing="5"
                                         HorizontalOptions="Center">
                        <Label Text="🏆" FontSize="40" />
                        <Label x:Name="TopTreeLabel"
                               Text="None"
                               FontSize="18"
                               TextColor="Orange"
                               FontAttributes="Bold" />
                        <Label Text="Top Tree"
                               FontSize="14"
                               TextColor="White" />
                    </VerticalStackLayout>
                </Frame>

            </HorizontalStackLayout>

            <!-- Tree Management Section -->
            <Frame BackgroundColor="#2A2A2A"
                   CornerRadius="10"
                   Padding="10">
                <VerticalStackLayout Spacing="10">
                    <Button Text="Add New Tree"
                            BackgroundColor="Green"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            Clicked="OnAddTreeClicked" />

                    <!-- 🔁 Replaced Update button with Delete button -->
                    <Button Text="Delete Tree"
                            BackgroundColor="DarkRed"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            Clicked="OnDeleteTreeClicked" />
                </VerticalStackLayout>
            </Frame>

            <!-- NGO Requests -->
            <Frame BackgroundColor="#2A2A2A"
                   CornerRadius="10"
                   Padding="10">
                <Button Text="NGO Requests"
                        BackgroundColor="MediumSeaGreen"
                        TextColor="White"
                        CornerRadius="25"
                        HeightRequest="50"
                        Clicked="OnNGORequestsClicked" />
            </Frame>

            <!-- User Management -->
            <Frame BackgroundColor="#2A2A2A"
                   CornerRadius="10"
                   Padding="10">
                <VerticalStackLayout Spacing="10">
                    <Button Text="View Leaders"
                            BackgroundColor="DodgerBlue"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            Clicked="OnViewLeadersClicked" />

                    <Button Text="View Volunteers"
                            BackgroundColor="MediumPurple"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            Clicked="OnViewVolunteersClicked" />
                </VerticalStackLayout>
            </Frame>

            <!-- Zone Management -->
            <Frame BackgroundColor="#2A2A2A"
                   CornerRadius="10"
                   Padding="10">
                <Button Text="Zone Management"
                        BackgroundColor="Purple"
                        TextColor="White"
                        CornerRadius="25"
                        HeightRequest="50"
                        Clicked="OnZoneWiseClicked" />
            </Frame>
            <!-- Messages -->
            <Frame BackgroundColor="#2A2A2A"
                   CornerRadius="10"
                   Padding="10">
                <Button Text="📩 Messages"
                        BackgroundColor="Crimson"
                        TextColor="White"
                        CornerRadius="25"
                        HeightRequest="50"
                        Clicked="OnMessagesClicked" />
            </Frame>

            <!-- Logout -->
            <Button Text="Logout"
                    BackgroundColor="Red"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnLogoutClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
