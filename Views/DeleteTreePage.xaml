<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.DeleteTreePage"
             Title="Delete Tree"
             BackgroundColor="#1E1E1E">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label Text="Delete Tree"
               FontAttributes="Bold"
               FontSize="28"
               TextColor="Salmon"
               HorizontalOptions="Center" />

        <Picker x:Name="TreePicker"
                Title="Select Tree"
                TitleColor="White"
                TextColor="White"
                BackgroundColor="#333"
                SelectedIndexChanged="OnTreeSelected" />

        <Button Text="Delete Selected Tree"
                BackgroundColor="DarkRed"
                TextColor="White"
                CornerRadius="20"
                HeightRequest="50"
                Clicked="OnDeleteClicked" />

        <Button Text="Cancel"
                BackgroundColor="Gray"
                TextColor="White"
                CornerRadius="20"
                HeightRequest="50"
                Clicked="OnCancelClicked" />

    </VerticalStackLayout>
</ContentPage>
