<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.PersonalDashboard"
             BackgroundColor="#1E1E1E"
             Title="Personal Dashboard">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Label Text="Personal Dashboard"
                   FontSize="26"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Frame BackgroundColor="#2A2A2A" CornerRadius="14" Padding="16">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Add My Zone"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold" />
                    <Label Text="Submit your location to Admin for tree plantation approval."
                           TextColor="Gray" FontSize="14" />
                    <Button Text="Add Zone"
                            BackgroundColor="DarkOrange"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            Clicked="OnAddZoneClicked" />
                </VerticalStackLayout>
            </Frame>

            <Frame BackgroundColor="#2A2A2A" CornerRadius="14" Padding="16">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Purchase Trees"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold" />
                    <Label Text="Buy or sponsor trees to support plantation zones."
                           TextColor="Gray"
                           FontSize="14" />
                    <Button Text="Purchase Now"
                            BackgroundColor="Green"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            Clicked="OnPurchaseClicked" />
                </VerticalStackLayout>
            </Frame>

            <Frame BackgroundColor="#2A2A2A" CornerRadius="14" Padding="16">
                <VerticalStackLayout Spacing="8">
                    <Label Text="My Contributions"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold" />
                    <Label Text="View trees you have sponsored or donations made."
                           TextColor="Gray" FontSize="14" />
                    <Button Text="View History"
                            BackgroundColor="MediumPurple"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            Clicked="OnHistoryClicked" />
                </VerticalStackLayout>
            </Frame>

            <Button Text="Logout"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnLogoutClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
