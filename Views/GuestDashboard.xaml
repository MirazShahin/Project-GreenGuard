<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GreenGuard.Views.GuestDashboard"
    BackgroundColor="#1E1E1E"
    Title="Guest Dashboard">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Available Trees"
                   FontSize="26"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <CollectionView x:Name="TreeCollectionView" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#2A2A2A"
                               CornerRadius="12"
                               Padding="15"
                               Margin="0,10">

                            <VerticalStackLayout Spacing="8">

                                <Label Text="{Binding Name}"
                                       FontSize="18"
                                       TextColor="LightGreen"
                                       FontAttributes="Bold" />

                                <Label Text="{Binding Description}"
                                       FontSize="14"
                                       TextColor="LightGray"
                                       LineBreakMode="WordWrap" />

                                <Label Text="Price: ৳{Binding Price}"
                                       FontSize="16"
                                       TextColor="Orange" />

                                <Label Text="Stock: {Binding Stock}"
                                       FontSize="16"
                                       TextColor="LightGreen" />

                                <Button Text="Buy Tree"
                                        BackgroundColor="#FF3366"
                                        TextColor="White"
                                        CornerRadius="20"
                                        HeightRequest="45"
                                        CommandParameter="{Binding .}"
                                        Clicked="OnBuyTreeClicked"/>

                            </VerticalStackLayout>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Back"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Margin="0,20,0,0"
                    Clicked="OnLogoutClicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
