<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenGuard.Views.LeaderManagementPage"
             BackgroundColor="#1E1E1E"
             Title="Manage Leaders">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="👑 Manage Leaders"
                   FontSize="26"
                   TextColor="LightGreen"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Search Bar -->
            <SearchBar x:Name="LeaderSearchBar"
                       Placeholder="Search leaders by name, email or ID..."
                       TextChanged="OnSearchTextChanged"
                       TextColor="White"
                       PlaceholderColor="Gray"
                       BackgroundColor="#2A2A2A"/>

            <!-- Grouped Leaders -->
            <CollectionView x:Name="GroupedLeaderCollectionView"
                            IsGrouped="True"
                            SelectionMode="None">

                <!-- Group Header -->
                <CollectionView.GroupHeaderTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#333"
                               Padding="10"
                               CornerRadius="5"
                               Margin="0,5,0,0">
                            <Label Text="{Binding Key}"
                                   FontSize="18"
                                   TextColor="LightGreen"
                                   FontAttributes="Bold"/>
                        </Frame>
                    </DataTemplate>
                </CollectionView.GroupHeaderTemplate>

                <!-- Leader Items -->
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#2A2A2A"
                               CornerRadius="10"
                               Padding="10"
                               Margin="5">

                            <VerticalStackLayout>

                                <!-- 🔹 FIXED: Changed Name → FullName -->
                                <Label Text="{Binding FullName}"
                                       FontSize="18"
                                       TextColor="White"
                                       FontAttributes="Bold"/>

                                <Label Text="{Binding LeaderId, StringFormat='Leader ID: {0}'}"
                                       FontSize="14"
                                       TextColor="Orange"/>

                                <Label Text="{Binding Email}"
                                       FontSize="14"
                                       TextColor="#ccc"/>

                                <Label Text="{Binding Zone, StringFormat='Zone: {0}'}"
                                       FontSize="14"
                                       TextColor="LightBlue"/>

                                <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">

                                    <Button Text="Edit"
                                            BackgroundColor="Teal"
                                            TextColor="White"
                                            CornerRadius="20"
                                            HeightRequest="35"
                                            CommandParameter="{Binding .}"
                                            Clicked="OnEditClicked"/>

                                    <Button Text="Remove"
                                            BackgroundColor="Red"
                                            TextColor="White"
                                            CornerRadius="20"
                                            HeightRequest="35"
                                            CommandParameter="{Binding .}"
                                            Clicked="OnRemoveClicked"/>

                                </HorizontalStackLayout>

                            </VerticalStackLayout>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Add Leader -->
            <Button Text="➕ Add Leader"
                    BackgroundColor="DodgerBlue"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnAddLeaderClicked"/>

            <!-- Back Button -->
            <Button Text="Back"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnBackClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
